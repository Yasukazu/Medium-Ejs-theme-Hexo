<section class="posts">
  <% page.posts.each(function (post) { %>
    <article class="post">
      <div class="post-title">
        <a class="post-title-link" href="<%- url_for(post.path) %>" >
          <%= post.title %>
        </a >
      </div>
      <div class="post-excerpt">
          <%- post.excerpt %>
      </div>
      <div class="post-meta">
        <time class="post-date">
            <%- date(post.date, "YYYY-MM-DD") %>
        </time>
      </div>
    </article>
  <% }) %>
</section>